<p id="notice"><%= notice %></p>

<h1>物品</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.stock %></td>
        <td><%= link_to '详情', center_item_path(item) %></td>
        <td><%= link_to '编辑', edit_center_item_path(item) %></td>
        <td><%= link_to '删除', center_item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

