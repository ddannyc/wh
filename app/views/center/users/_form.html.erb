<%= form_with(model: [:center, user], local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <p>
      <%= form.label '用户名' %><br>
      <%= form.text_field :name %>
    </p>

    <p>
      <%= form.label '密码' %><br>
      <%= form.password_field :password %>
    </p>
    <p>
      <%= form.label '科室' %><br>
      <%= select_tag 'user[department]', options_for_select(User.departments) %>
    </p>
    <%= form.submit %>
  </div>
<% end %>
