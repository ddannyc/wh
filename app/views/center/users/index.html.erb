<p id="notice"><%= notice %></p>

<h1>用户</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.department %></td>
        <td><%= user.created_at %></td>
        <td><%= link_to '详情', center_user_path(user) %></td>
        <td><%= link_to '编辑', edit_center_user_path(user) %></td>
        <td><%= link_to '删除', center_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

