<h1>用户登录</h1>

<p id="notice"><%= notice %></p>
<%= form_with url: sessions_path, local: true do |form| %>
  <p>
    <%= form.label '用户名' %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label '密码' %><br>
    <%= form.password_field :password %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

